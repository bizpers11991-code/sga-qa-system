{
  "workstream_id": "WS1",
  "title": "PWA Foundation & Design System",
  "assigned_to": "Gemini 2.0 Flash Exp",
  "priority": "P0",
  "complexity": "High",
  "estimated_hours": 6,
  "dependencies": [],
  "blocking": ["WS2", "WS3", "WS4", "WS5", "WS6", "WS7", "WS8", "WS9", "WS10"],

  "objectives": [
    "Create PWA manifest with SGA branding",
    "Implement service worker for offline support",
    "Set up Tailwind design system with SGA colors",
    "Create reusable SGA branded components"
  ],

  "tasks": [
    {
      "id": "WS1-T1",
      "title": "Create PWA Manifest",
      "description": "Generate manifest.json with SGA branding, icons, and PWA configuration",
      "files_to_create": [
        "public/manifest.json"
      ],
      "requirements": {
        "name": "SGA QA System",
        "short_name": "SGA QA",
        "theme_color": "#d97706",
        "background_color": "#fffbeb",
        "display": "standalone",
        "orientation": "portrait",
        "icons": [
          {"src": "icon-192.png", "sizes": "192x192", "type": "image/png"},
          {"src": "icon-512.png", "sizes": "512x512", "type": "image/png"}
        ]
      }
    },
    {
      "id": "WS1-T2",
      "title": "Implement Service Worker",
      "description": "Create service worker for offline caching and background sync",
      "files_to_create": [
        "public/sw.js",
        "src/utils/registerServiceWorker.ts"
      ],
      "requirements": {
        "cache_strategy": "Network first, cache fallback",
        "offline_page": true,
        "background_sync": true
      }
    },
    {
      "id": "WS1-T3",
      "title": "Configure Tailwind with SGA Design System",
      "description": "Update Tailwind config with SGA color palette and custom classes",
      "files_to_modify": [
        "tailwind.config.js"
      ],
      "files_to_create": [
        "src/styles/design-system.css"
      ],
      "color_palette": {
        "primary": "#b45309",
        "secondary": "#d97706",
        "accent": "#92400e",
        "background": "#fffbeb",
        "surface": "#ffffff"
      }
    },
    {
      "id": "WS1-T4",
      "title": "Create SGA Header Component",
      "description": "Reusable header with SGA logo for all pages",
      "files_to_create": [
        "src/components/branding/SgaHeader.tsx"
      ],
      "requirements": {
        "logo_placement": "top-left",
        "responsive": true,
        "sticky_header": true
      }
    },
    {
      "id": "WS1-T5",
      "title": "Create SGA Loading Component",
      "description": "Branded loading spinner/screen",
      "files_to_create": [
        "src/components/branding/SgaLoader.tsx"
      ],
      "requirements": {
        "animation": "fade-in",
        "sga_logo": true,
        "loading_text": true
      }
    },
    {
      "id": "WS1-T6",
      "title": "Update index.html with PWA meta tags",
      "description": "Add PWA meta tags, manifest link, theme color",
      "files_to_modify": [
        "index.html"
      ],
      "requirements": {
        "viewport": "width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no",
        "apple_touch_icon": true,
        "theme_color": "#d97706"
      }
    }
  ],

  "acceptance_criteria": [
    "PWA installable on Windows and iPad",
    "Offline mode works (shows cached pages)",
    "SGA colors consistent throughout",
    "All components follow design system",
    "Service worker registered successfully"
  ],

  "testing_requirements": [
    "Test PWA installation on Windows Edge",
    "Test PWA installation on iPad Safari",
    "Test offline mode",
    "Lighthouse PWA score = 100"
  ],

  "deliverables": {
    "files": [
      "public/manifest.json",
      "public/sw.js",
      "src/utils/registerServiceWorker.ts",
      "tailwind.config.js (modified)",
      "src/styles/design-system.css",
      "src/components/branding/SgaHeader.tsx",
      "src/components/branding/SgaLoader.tsx",
      "index.html (modified)"
    ],
    "documentation": "README_WS1.md with setup instructions"
  }
}
